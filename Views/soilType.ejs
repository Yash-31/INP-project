              <% soils.forEach((soils)=>{%>
                <a href="/soiltype/<%= soils._id%>">
                    <div class="card">
                        <div class="image">
                            <img src="<%=soils.image%>" alt="">
                        </div>
                        <div class="text">
                          <%= soils.Name%>
                          
                          
                        </div>
                      </div>
                </a>
                
                
                <% });%>
            
        </div>
       
    </div>
    </div>






